<h1><%= "You have choosen #{@cocktail.name}" %></h1>

  <div class="row mt-5">

    <div class="col-7">
      <div class="some-class">
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      </div>
    </div>

  <div class="col-5">
    <div class="some-class">
       <% @cocktail.doses.each do |dose|  %>
       <h2 class="ingredient-name">  <%= dose.ingredient.name %> </h2>
       <h3 class="ingredients-description">  <%= dose.description %> </h3>
        <%= link_to "Delete", dose_path(dose), class: "btn btn-warning",
        method: :delete, data: { confirm: "Are you sure man?"}  %>
      <% end %>
    </div>
  </div>
</div>

    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-success'  %>
    <%= link_to "Back to cocktails", root_path, class: 'btn btn-primary'  %>



